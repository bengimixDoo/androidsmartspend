<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="24dp"
android:orientation="vertical"
android:background="#E9FAFD"
    android:gravity="center">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="THIẾT LẬP NGÂN SÁCH"
        android:textColor="#202B3C"
        android:textSize="24sp"
        android:textStyle="bold" />

<EditText
    android:id="@+id/etBudget"
    android:hint="Ngân sách hàng tháng"
    android:inputType="number"
    android:textColor="#202B3C"
    android:backgroundTint="#27585B"
    android:layout_marginBottom="10dp"
    android:layout_height="90dp"
    android:layout_width="match_parent"/>

<EditText
    android:id="@+id/etCard"
    android:hint="Số dư trong thẻ"
    android:layout_height="90dp"
    android:layout_width="match_parent"
    android:inputType="number"
    android:textColor="#202B3C"
    android:backgroundTint="#27585B"
    android:layout_marginBottom="10dp"/>

<EditText
    android:id="@+id/etCash"
    android:hint="Tiền mặt hiện có"
    android:inputType="number"
    android:textColor="#202B3C"
    android:backgroundTint="#27585B"
    android:layout_marginBottom="20dp"
    android:layout_height="90dp"
    android:layout_width="match_parent"/>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#27585B"
        android:layout_marginTop="20dp"
        android:text="Tiếp tục"
        android:textColor="#FFFFFF" />
</LinearLayout>


